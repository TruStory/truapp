{
  "extends": [
    "tslint-eslint-rules",
    "tslint-react"
  ],
  "rules": {
    "object-curly-spacing": true,
    "ordered-imports": [
      true
    ],
    "quotemark": [
      true,
      "single",
      "jsx-single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "member-access": [
      false
    ],
    "member-ordering": [
      false
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "no-empty": false,
    "no-trailing-whitespace": true,
    "no-constant-condition": false,
    "triple-equals": [
      true,
      "allow-undefined-check"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-consecutive-blank-lines": true,
    "eofline": true,
    "no-duplicate-imports": true,
    "jsx-alignment": true,
    "jsx-no-bind": true,
    "jsx-curly-spacing": [true, "always"],
    "jsx-equals-spacing": [false, "always"],
    "jsx-space-before-trailing-slash": true,
    "jsx-no-lambda": true,
    "max-line-length": [true, {"limit": 150, "ignore-pattern": "^import |^export {(.*?)}"}],
    "max-classes-per-file": [true, 1],
    "whitespace": [
      true,
      "check-module",
      "check-type",
      "check-operator",
      "check-branch",
      "check-preblock",
      "check-postbrace",
      "check-separator"
    ]
  }
}
